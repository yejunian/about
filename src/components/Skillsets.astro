type Skillset = {
  name: string;
  rate: number;
};

const skillsets: Skillset[] = [
  {
    name: "JavaScript",
    rate: 1,
  },
  {
    name: "TypeScript",
    rate: 0.8,
  },
  {
    name: "React",
    rate: 1,
  },
  {
    name: "Zustand",
    rate: 0.8,
  },
  {
    name: "Tailwind CSS",
    rate: 0.8,
  },
  {
    name: "SCSS",
    rate: 0.6,
  },
  {
    name: "Express",
    rate: 0.8,
  },
  {
    name: "Docker",
    rate: 0.6,
  },
