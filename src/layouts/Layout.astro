import "sanitize.css";
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>About yejunian</title>
  </head>

  <body>
    <header>header</header>

    <main><slot /></main>

    <footer>footer</footer>
  </body>
</html>

<style is:global>
  html {
    display: flex;
    align-items: stretch;
    justify-content: stretch;

    margin: 0;
    width: 100%;
    min-height: 100%;

    word-break: keep-all;
    overflow-wrap: break-word;

    line-height: 1;
    /* TODO */
    /* font-family: ...; */
    font-size: 16px;
    text-size-adjust: none;
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: stretch;

    margin: 0;
    width: 100%;
  }

  h2 {
    margin: 0;
    font-size: 20px;
  }
</style>

<style>
  header {
    flex: 0 0 48px;

    background-color: #d0d0d0;
  }

  main {
    display: grid;
    grid-template-rows: repeat(3, auto);
    --grid-row-skillset: 2;
    --grid-row-education: -2;
    grid-template-columns: repeat(12, 1fr);
    --grid-column-descriptions: 6;
    --grid-column-projects: 3;
    gap: 24px;

    padding: 24px;
    width: 100%;
    height: 100%;
  }

  footer {
    background-color: #d0d0d0;
  }
</style>
